<h2>Categories</h2>

<table class="table table-striped">
	<tr>
		<th>Category Name</th>
		<th>Actions</th>
	</tr>

	<% @categories.each do |category| %>
		<tr>
			<td><%= category.name %></td>
			<td><%= link_to 'Edit', edit_category_path(category.id), class: 'btn btn-info' %> | <%= link_to 'Delete', category_path(category), class: 'btn btn-danger', method: :delete, data: {confirm: 'Please Confirm'} %></td>
		</tr>
	<% end -%>

</table>
